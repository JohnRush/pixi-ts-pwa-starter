{
  "name": "pixi-pwa-starter",
  "version": "0.0.1",
  "description": "A starter template for a cross-platform PWA application.",
  "main": "index.js",
  "scripts": {
    "dev": "vite --open",
    "dev-task": "vite",
    "build": "tsc && vite build",
    "start": "npm run build && vite preview",
    "start-remote": "vite --host",
    "deploy": "swa deploy"
  },
  "author": "",
  "license": "See LICENSE.txt file",
  "dependencies": {
    "@pwabuilder/pwainstall": "^1.6.7",
    "@vaadin/router": "^1.7.4",
    "lit": "^2.2.5",
    "pixi.js": "^6.4.2",
    "workbox-build": "^6.5.3",
    "workbox-core": "^6.5.3",
    "workbox-precaching": "^6.5.3"
  },
  "devDependencies": {
    "@types/node": "^17.0.40",
    "typescript": "^4.7.3",
    "vite": "^2.9.9",
    "vite-plugin-pwa": "^0.12.0"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "es5",
    "endOfLine": "crlf",
    "bracketSpacing": true
  }
}